<div class="container">
      <div class= "d-flex justify-content-center">
        <h2>Editar seu perfil</h2>
        <% if current_user.photo.attached? %>
          <%= cl_image_tag current_user.photo.key, class: "profile-pic", width: 50, height: 50, crop: :thumb, gravity: :face %>
        <% else %>
          <%= image_tag "https://cdn1.iconfinder.com/data/icons/user-pictures/100/unknown-512.png", class: "profile", width: 75, height: 75, crop: :thumb %>
        <% end %>
      </div>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
          <%= f.input :name,
                      required: true,
                      autofocus: true,
                      label: "Nome",
                      input_html: { autocomplete: "name" }%>
          <%= f.input :address,
                      required: true,
                      autofocus: true,
                      label: "Endereço",
                      input_html: { autocomplete: "address" }%>
          <%= f.input :phone,
                      required: true,
                      autofocus: true,
                      label: "Telefone",
                      input_html: { autocomplete: "phone" }%>
          <%= f.input :role,
                      required: false,
                      autofocus: true,
                      label: "Perfil",
                      as: :radio_buttons,
                      collection: [['Doador'], ['Recebedor']],
                      input_html: { autocomplete: "role" }%>
          <%= f.input :description,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "description" }%>
          <%= f.input :password,
                      hint: "leave it blank if you don't want to change it",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :current_password,
                      hint: "Confirme seu password para atualizar as mudanças",
                      required: true,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :photo, as: :file %>
        </div>


    <div class="form-actions">
      <%= f.button :submit, "Update", class: "btn-hover" %>
    </div>
  <% end %>


      <p>Não está feliz? <%= link_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "Voltar", root_path %>
</div>

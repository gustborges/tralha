<body>
  <%= link_to root_path, class: "fa-home" do %>
    <i class="fas fa-hashtag"></i>
  <% end %>

<div class="container">
  <h2 style="text-align: center">Cadastre-se</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
  <div class="d-flex flex-column align-items-stretch" >
    <div class="form-inputs col-md-8 col-sm-10 ">
      <%= f.input :name,
                  required: true,
                  autofocus: true,
                  label: "Nome",
                  input_html: { autocomplete: "name" }%>
      <%= f.input :address,
                  required: true,
                  autofocus: true,
                  label: "Endereço",
                  input_html: { autocomplete: "address" }%>
      <%= f.input :phone,
                  required: true,
                  autofocus: true,
                  label: "Telefone",
                  input_html: { autocomplete: "phone" }%>
      <%= f.input :role,
                  required: false,
                  autofocus: true,
                  label: "Perfil",
                  as: :radio_buttons,
                  collection: {Doador: "donor", Recebedor: "receiver"},
                  input_html: { autocomplete: "role" }%>
      <%= f.input :description,
                  label: "Descrição",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "description" }%>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  label: "Senha",
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  label: "Confirme a senha",
                  input_html: { autocomplete: "new-password" } %>


      <div class="d-flex">
        <%= f.button :submit, "Cadastre-se", class:"btn-hover" %>
      </div>

      <div class="link-forms d-flex ">
        <%= render "devise/shared/links" %>
      </div>

    <% end %>
      </div>
  </div>
</div>
</body>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Luckiest+Guy&display=swap');

  h2 {
    font-family: 'Luckiest Guy', cursive;
    color: #FD604E;
  }

  body {
    background: rgb(244,244,244);
    background: linear-gradient(0deg, rgba(244,244,244,1) 0%, rgba(246,137,137,1) 100%);
  }

</style>

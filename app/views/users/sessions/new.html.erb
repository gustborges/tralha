<div class="container d-flex flex-column justify-content-center col-md-10 col-sm-10">
  <h2 style="text-align: center">Entrar</h2 >
  <div class="form-box d-flex flex-column justify-content-center col-md-10 col-sm-1">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs" >
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Entrar", class: "btn-hover" %>
      </div>
    <% end %>

    <div class="d-flex col-md-12 col-sm-10">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Luckiest+Guy&display=swap');

  h2 {
    font-family: 'Luckiest Guy', cursive;
    color: #FD604E;
  }

  body {
    background: rgb(244,244,244);
    background: linear-gradient(0deg, rgba(244,244,244,1) 0%, rgba(246,137,137,1) 100%);
  }
</style>

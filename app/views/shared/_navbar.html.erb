<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <i class="fas fa-home"></i>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false, width: 80, height: 35, crop: :thumb, gravity: :face %>
          <% else %>
            <%= image_tag "https://i.pinimg.com/originals/fd/0c/55/fd0c559856ca991e9e28937dc802f0b0.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false, width: 150, height: 150, crop: :thumb, gravity: :face %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Meu Perfil", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Minhas Doações", donations_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to new_user_session_path, class: "navbar-brand" do %>
          <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcSujUwTc9nNo2M2B8OxODDIlV00tjdUFMiWjIiFZl92wMf5FIbE&usqp=CAU", class: "nav-link rounded-circle" %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
